@model Model.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Book bane</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="dateTime" class="control-label">Dato</label>
                <input type="date" asp-for="dateTime" class="form-control" />
                <span asp-validation-for="dateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="isEquipment" class="control-label">Fjerbolde</label>
                <input asp-for="isEquipment" type="checkbox" />
                <span asp-validation-for="isEquipment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="isEquipment" class="control-label">Antal ketsjere</label>
                <input asp-for="isEquipment"/>
                <span asp-validation-for="isEquipment" class="text-danger"></span>
            </div>

            <div class="choose-court">
                <h2>Vælg en bane</h2>
            </div>

            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}