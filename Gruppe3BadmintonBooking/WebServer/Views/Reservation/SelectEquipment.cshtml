@model Model.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Skal du have udstyr med?</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Reservation/ShowReservation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="shuttleReserved" class="control-label">Fjerbolde</label>
                <input asp-for="shuttleReserved" type="checkbox" />
                <span asp-validation-for="shuttleReserved" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numberOfRackets" class="control-label">Antal ketsjere</label>
                <input asp-for="numberOfRackets" />
                <span asp-validation-for="numberOfRackets" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Gennemfør booking" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}